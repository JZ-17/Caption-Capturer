{
  "manifest_version": 3,
  "name": "Caption Capturer",
  "version": "1.0",
  "description": "Captures speech and displays captions.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/png16.png",
      "48": "icons/png48.png",
      "128": "icons/png128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ]
}
