{
    "manifest_version": 3,
    "name": "Caption Capture",
    "version": "1.0",
    "description": "A Chrome Extension capable of capturing all audios on your Browser!",
    "permissions": [
      "activeTab",
      "tabCapture"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  